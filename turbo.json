{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "lint": {},
      "test": {
        "dependsOn": ["build"]
      },
      "publish-packages": {
        "dependsOn": ["build"],
        "cache": false
      },
      "size": {
        "dependsOn": ["build"]
      },
      "size:check": {
        "dependsOn": ["build"]
      },
      "size:watch": {
        "dependsOn": ["build"],
        "cache": false
      }
    }
  }