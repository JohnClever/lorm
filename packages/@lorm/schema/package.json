{
  "name": "@lorm/schema",
  "version": "0.1.9",
  "description": "Database schema abstractions for lorm framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./pg": {
      "types": "./dist/adapters/pg.d.ts",
      "import": "./dist/adapters/pg.js",
      "require": "./dist/adapters/pg.js"
    },
    "./mysql": {
      "types": "./dist/adapters/mysql.d.ts",
      "import": "./dist/adapters/mysql.js",
      "require": "./dist/adapters/mysql.js"
    },
    "./sqlite": {
      "types": "./dist/adapters/sqlite.d.ts",
      "import": "./dist/adapters/sqlite.js",
      "require": "./dist/adapters/sqlite.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnClever/lorm.git",
    "directory": "packages/@lorm/schema"
  },
  "publishConfig": {
    "access": "public"
  }
}