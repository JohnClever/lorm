{
  "name": "@lorm/cli",
  "version": "0.1.64",
  "description": "Command-line interface for lorm - mobile-first framework",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "bin": "./bin/cli.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "size": "tsx ../../../scripts/bundle-size.ts",
    "size:check": "pnpm build && pnpm size",
    "size:watch": "pnpm build && pnpm size && echo '\nWatching for changes...' && pnpm build --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnClever/lorm.git",
    "directory": "packages/@lorm/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.6.0",
    "@lorm/core": "workspace:*",
    "cac": "^6.7.14",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "execa": "^9.6.0",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/which": "^3.0.4",
    "tsx": "^4.20.3"
  }
}