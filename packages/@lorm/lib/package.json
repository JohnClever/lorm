{
  "name": "@lorm/lib",
  "version": "0.1.2",
  "description": "Shared utilities and types for lorm - mobile-first framework",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./plugin": {
      "types": "./dist/utils/plugin-system.d.ts",
      "import": "./dist/utils/plugin-system.js",
      "require": "./dist/utils/plugin-system.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "size": "tsx ../../../scripts/bundle-size.ts",
    "size:check": "pnpm build && pnpm size",
    "size:watch": "pnpm build && pnpm size && echo '\nWatching for changes...' && pnpm build --watch"
  },
  "dependencies": {
    "zod": "^3.25.71"
  },
  "peerDependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.4.1",
    "execa": "^9.6.0",
    "which": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnClever/lorm.git",
    "directory": "packages/@lorm/lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@types/which": "^3.0.4",
    "terser": "^5.43.1",
    "tsx": "^4.20.3"
  }
}