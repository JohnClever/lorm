{
  "name": "@lorm/core",
  "version": "0.1.2",
  "description": "Core functionality for lorm - mobile-first framework",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "size": "tsx ../../../scripts/bundle-size.ts",
    "size:check": "pnpm build && pnpm size",
    "size:watch": "pnpm build && pnpm size && echo '\nWatching for changes...' && pnpm build --watch"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "@lorm/lib": "workspace:*",
    "@neondatabase/serverless": "^1.0.1",
    "typed-rpc": "^2.0.0",
    "@planetscale/database": "^1.19.0",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "mysql2": "^3.14.2",
    "postgres": "^3.4.7",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.15.4",
    "terser": "^5.43.1",
    "tsx": "^4.20.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnClever/lorm.git",
    "directory": "packages/@lorm/core"
  },
  "publishConfig": {
    "access": "public"
  }
}