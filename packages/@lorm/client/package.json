{
  "name": "@lorm/client",
  "version": "0.1.14",
  "description": "Client library for lorm - mobile-first framework",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "size": "tsx ../../../scripts/bundle-size.ts",
    "size:check": "pnpm build && pnpm size",
    "size:watch": "pnpm build && pnpm size && echo '\nWatching for changes...' && pnpm build --watch"
  },
  "dependencies": {
    "typed-rpc": "^2.0.0",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnClever/lorm.git",
    "directory": "packages/@lorm/client"
  },
  "publishConfig": {
    "access": "public"
  }
}