{
  "name": "@lorm/client",
  "version": "0.1.11",
  "description": "Client library for lorm framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "typesVersions": {
    "*": {
      ".lorm/types": [
        "../../.lorm/types.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./.lorm/types": {
      "types": "../../.lorm/types.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@orpc/client": "^1.6.6",
    "@orpc/server": "^1.6.6",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnClever/lorm.git",
    "directory": "packages/@lorm/client"
  },
  "publishConfig": {
    "access": "public"
  }
}